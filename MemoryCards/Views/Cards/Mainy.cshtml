@model MemoryCards.Models.CardModel

@{
    ViewData["Title"] = "Mainy";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<script>
        function showDiv() {
            document.getElementById('KnowOrNot').style.display = "block";
            document.getElementById('ShowButton').style.display = "none";
        }
</script>


<style >
    body {
        background-color: #0e192b;
        color: #fff;
         }

    tr{
        text-align: center;
    }
</style >

<h1>Mainy</h1>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Question)
                
            </th>
         
        </tr>
    </thead>


    <tr>
            <td>
                @Html.DisplayFor(model => model.Question)
            </td>
    </tr>
</table> 


         <div id="KnowOrNot" style="display: none;">

            <table class="table table-dark">
              <thead>
                  <tr>        
                      <th>
                         @Html.DisplayNameFor(model => model.Answer)               
                     </th>
                 </tr>


                 <tr>
                      <td>
                         @Html.DisplayFor(model => model.Answer)
                     </td>                  
                 </tr>
               </thead>
            </table>

                <div style="align-items: center;">
                     <form method="post" asp-action="Know" asp-route-id="@Model.Id" >
                    <input type="submit" value="Know" class="btn btn-success" /> 
                 </form>

                    <br/>
                 <form method="post" asp-action="DontKnow" asp-route-id="@Model.Id" >
                     <input type="submit" value="Dont Know" class="btn btn-primary"  />    
                 </form> 

                </div>
                
                  
                
         </div>

          
          <a id="ShowButton" href="javascript:;" onclick="showDiv()" class="btn btn-info" style="margin-bottom: 15px;">Show</a>
          <br/>
           <a asp-action="Index" class="btn btn-secondary">Back to list </a>
          

         

         

        
   
